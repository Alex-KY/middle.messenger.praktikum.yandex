{
  "root": true,

  "env": {
    "es6": true,
    "browser": true
  },

  "extends": [
    "eslint:recommended"
  ],

  "parser": "@babel/eslint-parser",

  "parserOptions": {
      "sourceType": "module",
      "project": ["./tsconfig.json"]
  },

  "rules": {
    "semi": "error"
  },

  "plugins": [
    "editorconfig"
  ]
}
