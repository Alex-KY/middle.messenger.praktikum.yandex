{
  "root": true,

  "env": {
    "es6": true,
    "browser": true
  },

  "extends": [
    "plugin:@typescript-eslint/recommended"
  ],

  "parser": "@typescript-eslint/parser",

  "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018,
      "project": ["./tsconfig.json"]
  },

  "rules": {
    "semi": "error",
    "@typescript-eslint/no-var-requires": 0
  },

  "plugins": [
    "editorconfig"
  ]
}
