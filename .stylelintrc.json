{
  "extends": "stylelint-config-standard-scss",

  "rules": {
    "indentation": [
      2,
      {
        "ignore": ["inside-parens"]
      }
    ],
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "selector-class-pattern": "^[a-z][a-zA-Z-_]+$",
    "color-function-notation": "legacy"
  },
  "ignoreFiles": [
    "dist/*"
  ]
}
